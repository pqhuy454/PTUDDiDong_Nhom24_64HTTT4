<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/r09cwl30lhw8h"
            android:layout_weight="1"
            android:background="@drawable/cr20bffffff"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rqgvniih2ml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r5mgogsypwwu"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_back"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/rviayxje423l"
                    android:textColor="#181C2E"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="My Orders"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r4fgl6tyh2kk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/r0xfbpyn90inn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="68dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnOngoing"
                        android:textColor="#A4A7B8"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Ongoing"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rg2sigbict7f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="vertical">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/regw8cm0q3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CED6DF"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
            <!-- Danh sách món đã gọi -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerOrder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
</LinearLayout>