<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="#EEEEEE">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/voucherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Burger Bistro"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/voucherPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$35.25 $20" />

        <TextView
            android:id="@+id/voucherDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/5/2025 2/5/2025" />

        <TextView
            android:id="@+id/voucherId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#162432" />
    </LinearLayout>

    <Button
        android:id="@+id/deleteVoucherBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:backgroundTint="#FF5722" />
</LinearLayout>