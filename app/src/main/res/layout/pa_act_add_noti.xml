<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rdojc3ovugrw"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/cr20bffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rvxgqbgddpy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="49dp"
                android:layout_marginBottom="28dp"
                android:layout_marginStart="24dp"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/r3rk27dbznwb"
                    app:shapeAppearanceOverlay="@style/cr20"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="48dp"
                    android:src="@drawable/icon_back"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/r6y8lu8q09cl"
                    android:textColor="#31343D"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Thêm thông báo"
                    />
            </LinearLayout>
            <EditText
                android:inputType="text"
                android:hint="Tiêu đề"
                android:id="@+id/etTieuDe"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="28dp"
                android:layout_marginHorizontal="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cr10bc4c4c433"
                android:paddingVertical="17dp"
                android:paddingLeft="22dp"
                android:paddingRight="44dp"
                />

            <EditText
                android:id="@+id/etThongtin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginBottom="28dp"
                android:background="@drawable/cr10bc4c4c433"
                android:hint="Thông tin"
                android:inputType="text"
                android:paddingVertical="40dp"
                android:paddingLeft="22dp"
                android:paddingRight="44dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/r9e0c0mko6i5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/sffff7721sw1cr16bff7621"
                android:paddingVertical="14dp"
                android:layout_marginBottom="19dp"
                android:layout_marginHorizontal="35dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnLuu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lưu"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r8b5vkoliy2r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/sff7621sw1cr16"
                android:paddingVertical="14dp"
                android:layout_marginBottom="142dp"
                android:layout_marginHorizontal="35dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnHuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hủy"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>