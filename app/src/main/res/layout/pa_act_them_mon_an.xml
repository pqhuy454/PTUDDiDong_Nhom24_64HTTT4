<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rsir2wsk5o3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/cr20bffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rj8z6vfvfp8q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="49dp"
                android:layout_marginBottom="28dp"
                android:layout_marginStart="24dp"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgBack"
                    app:shapeAppearanceOverlay="@style/cr20"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="48dp"
                    android:src="@drawable/icon_back"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/rfxmy38tk0w8"
                    android:textColor="#31343D"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Thêm Món Ăn"
                    />
            </LinearLayout>
            <EditText
                android:inputType="text"
                android:hint="Mã Món Ăn"
                android:id="@+id/etMaMonAn"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="22dp"
                android:layout_marginHorizontal="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cr10bc4c4c433"
                android:paddingVertical="17dp"
                android:paddingLeft="22dp"
                android:paddingRight="44dp"
                />
            <EditText
                android:inputType="text"
                android:hint="Tên Món"
                android:id="@+id/etTenMonAn"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="22dp"
                android:layout_marginHorizontal="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cr10bc4c4c433"
                android:paddingVertical="17dp"
                android:paddingLeft="22dp"
                android:paddingRight="44dp"
                />
            <EditText
                android:inputType="text"
                android:hint="Giá"
                android:id="@+id/etGia"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="22dp"
                android:layout_marginHorizontal="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cr10bc4c4c433"
                android:paddingVertical="17dp"
                android:paddingLeft="22dp"
                android:paddingRight="44dp"
                />
            <ImageView
                android:id="@+id/imageViewSelectPhotoMonAn"
                android:layout_width="match_parent"
                android:src="@android:drawable/ic_menu_gallery"
                android:scaleType="centerInside"
                android:layout_height="wrap_content"
                android:background="@drawable/cr10bc4c4c433"
                android:paddingTop="17dp"
                android:paddingBottom="84dp"
                android:layout_marginBottom="18dp"
                android:layout_marginHorizontal="35dp"
                android:orientation="vertical"
                android:contentDescription="Chọn ảnh món ăn"
                />
            <!-- Thay phần LinearLayout chứa nút Lưu -->
            <LinearLayout
                android:id="@+id/r9e0c0mko6i5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/sffff7721sw1cr16bff7621"
                android:paddingVertical="14dp"
                android:layout_marginBottom="19dp"
                android:layout_marginHorizontal="35dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnLuu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lưu"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <!-- Thay phần LinearLayout chứa nút Hủy -->
            <LinearLayout
                android:id="@+id/r8b5vkoliy2r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/sff7621sw1cr16"
                android:paddingVertical="14dp"
                android:layout_marginBottom="142dp"
                android:layout_marginHorizontal="35dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnHuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hủy"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>